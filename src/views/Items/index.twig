{% extends "Layout/layout.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for img in item.getPicture()|split(",") %}
                            {% if loop.first %}
                                <li data-target="#carousel" data-slide-to="{{ loop.index }}"
                                    class="active"></li>
                            {% else %}
                                <li data-target="#carousel" data-slide-to="{{ loop.index }}"></li>
                            {% endif %}
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for img in item.getPicture()|split(",") %}
                            {% if loop.first %}
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="{{ assets }}{{ img }}" alt="First slide">
                                </div>
                            {% else %}
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="{{ assets }}{{ img }}" alt="First slide">
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="col">
                <h2>{{ item.getTitle }}
                    <small><br><b>{{ item.getPrice }} â‚¬</b></small></h2>
                <p>{{ item.getDescription|raw }}</p>
                <div class="action">
                    <a class="btn btn-lg btn-primary" role="button">Add to card</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}