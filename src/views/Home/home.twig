{% extends "Layout/layout.twig" %}
{% block content %}
    <div class="card-deck">
        {% for item in items %}
            <div class="card col-2">
                <!-- Card image -->
                <img class="card-img-top" src="{{ assets }}{{ item.getPicture|split(",")|first }}"
                     alt="{{ item.getTitle }}">
                <!-- List group -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ item.getTitle }}</li>
                    <li class="list-group-item">{{ item.getDescription|u.truncate(80,'...')|raw }}</li>
                    <li class="list-group-item">{{ item.price }} â‚¬</li>
                </ul>
                <!-- Card body -->
                <div class="card-body">
                    <a href="/{{ item.getCategoryName |replace({" ":"_"}) }}/{{ item.getTitle()|replace({" ":"_"}) }}"
                       class="btn btn-primary">See</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}